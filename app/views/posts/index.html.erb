<% title 'Posts' %>



<table class="table table-striped table-bordered">
<tr>
	<th>Number</th>
	<th>Title</th>
	<th>Written By</th>
	<th>Date</th>
</tr>
<% @posts.each do |p| %>
<tr>
<td>
<%= p.id %>
</td>
<td>
<%= render p %>
</td>
<td>Author</td>
<td><%= p.created_at - (10*3600) %></td>
</tr>
<% end %>
</table>

<div class="col-md-1">
	<%= link_to 'New post', new_post_path, class: "btn btn-lg btn-primary btn-block" %>
</div>